<div class="container">
  <div class="row">
    <div class="col-md-10 col-md-offset-1">

<h1><%= @cocktail.name %></h1>

<ul class="well">
  <% @cocktail.doses.each do |dose| %>
    <li>
      <%= dose.description %> <%= dose.ingredient.name %>
      <%= link_to dose_path(dose), method: :delete, data: { confirm: "Delete #{dose.ingredient.name}?" } do %>
        <i class="fa fa-trash-o" aria-hidden="true"></i>
      <% end %>
    </li>
  <% end %>
</ul>

<%= link_to new_cocktail_dose_path(@cocktail.id), class: 'btn btn-primary' do %>
  <i class="fa fa-plus"></i> Add an ingredient
<% end %>
<%= link_to cocktails_path, class: 'btn btn-primary' do %>
  <i class="fa fa-history"></i>
<% end %>

</div>
</div>
</div>
